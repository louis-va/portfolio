---
import Arrow from './Arrow.astro';
import ProjectImage from './ProjectImage.astro';

interface Props {
	name: string;
  slug: string;
  number: number;
}

const { name, slug, number } = Astro.props;
---

<a href={`/${slug}`} class="card arrow-target screenshot-target">
  <div class="title">
    <div class="name">
      <Arrow />
      <h2>{name}</h2>
    </div>
    <span class="id">{number<10?`0${number}`:number}</span>
  </div>
  <ProjectImage 
    src={`${slug}/thumbnail`}
    alt={name}
  />
</a>

<style>
  a.card {
    display: block;
    width: 100%;
    border-top: 1px solid var(--color-border);
    text-decoration: none;
  }
  .title {
    display: flex;
    justify-content: space-between;
    padding: .75rem 0;
  }
  .title h2, .title span{
    font-family: var(--font-monospace);
    color: var(--color-text);
    text-transform: uppercase;
    font-size: .85rem;
    font-weight: 400;
  }
  .title .name {
    display: flex;
    align-items: center;
  }
  .title .id {
    color: var(--color-text-muted);
  }
</style>